<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap namespace="exampleEntity">

	<resultMap class="pl.touk.top.ormtest.ExampleEntity" id="exampleEntityResult">
		<result property="id" column="id" />
		<result property="name" column="name" />
	</resultMap>

    <select id="selectAll" resultMap="exampleEntity.exampleEntityResult">
        SELECT
            *
        FROM
            EXAMPLEENTITIES
    </select>

    <select id="select" resultMap="exampleEntity.exampleEntityResult">
        SELECT
            *
        FROM
            EXAMPLEENTITIES
        WHERE
            id = #id#
    </select>

	<insert id="insert" parameterClass="pl.touk.top.ormtest.ExampleEntity">
  		INSERT INTO	EXAMPLEENTITIES
			(name)
		VALUES
			(#name#)
  		<selectKey keyProperty="id" resultClass="int">
  			SELECT LAST_INSERT_ID();
  		</selectKey>
  	</insert>

</sqlMap>
